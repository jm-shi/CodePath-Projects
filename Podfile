  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for MovieViewer
  pod 'AFNetworking'
  pod 'MBProgressHUD', '~> 1.0'
  pod 'ReachabilitySwift', '~> 3.0'

end
